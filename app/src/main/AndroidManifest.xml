<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thm.hoangminh.multimediamarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.MainViews.MainActivity" />
        <activity android:name=".SigninActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".views.ProductViews.ProductActivity" />
        <activity
            android:name=".views.ProductDetailViews.ProductDetailActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".views.RechargeViews.RechargeActivity" />
        <activity android:name=".views.RechargeHistoryViews.RechargeHistoryActivity" />
        <activity android:name=".RatingActivity" />
        <activity android:name=".views.ProfileViews.ProfileActivity" />
        <activity
            android:name=".views.fragments.ModifyProductFragment"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".BookmarkActivity" />
        <activity android:name=".views.ModifyProductViews.ModifyProductActivity" />
        <activity android:name=".views.UpdateProductViews.UpdateProductActivity"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>