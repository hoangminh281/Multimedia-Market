<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:gravity="center"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_user_image"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_cell"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewSex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_male_female"
            android:tint="@color/grey_50" />

        <TextView
            android:id="@+id/textViewRole"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textColor="@color/theme_app" />


    </LinearLayout>

    <TextView
        android:id="@+id/textviewBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_cell"
        android:drawableLeft="@mipmap/ic_diamond"
        android:drawablePadding="@dimen/half_spacing_cell"
        android:textColor="@color/super_black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonRecharge"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/spacing_cell"
        android:background="@drawable/blue_radius_button"
        android:text="@string/btn_recharge"
        android:textColor="#fff" />

</LinearLayout>